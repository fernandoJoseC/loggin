<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio">


    <ImageView
        android:id="@+id/logo_uide"
        style="@style/margins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/text_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Log in Options"
        android:textColor="@color/red_uide"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="@id/logo_uide"
        app:layout_constraintRight_toRightOf="@id/logo_uide"
        app:layout_constraintTop_toBottomOf="@id/logo_uide" />

    <Button
        android:id="@+id/code_inicio"
        style="@style/btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/code_icon"
        android:text="@string/code"
        android:textAllCaps="false"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="@id/logo_uide"
        app:layout_constraintRight_toRightOf="@id/logo_uide"
        app:layout_constraintTop_toBottomOf="@id/text_inicio" />

    <Button
        android:id="@+id/social_inicio"
        style="@style/btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/social_icon"
        android:text="@string/social"
        android:textAllCaps="false"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="@id/logo_uide"
        app:layout_constraintRight_toRightOf="@id/logo_uide"
        app:layout_constraintTop_toBottomOf="@id/code_inicio" />

    <Button
        android:id="@+id/mail_inicio"
        style="@style/btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/mail_icon"
        android:text="@string/mail"
        android:textAllCaps="false"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="@id/logo_uide"
        app:layout_constraintRight_toRightOf="@id/logo_uide"
        app:layout_constraintTop_toBottomOf="@id/social_inicio" />


</androidx.constraintlayout.widget.ConstraintLayout>